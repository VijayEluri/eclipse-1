<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Launch the selected resource as an operating system executable"
            id="com.ashigeru.eclipse.util.launch.launchResource"
            name="Launch">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="com.ashigeru.eclipse.util.launch.launchResource">
         <class
               class="com.ashigeru.eclipse.util.launch.internal.ui.handlers.LaunchResourceHandler">
         </class>
         <enabledWhen>
            <reference
                  definitionId="com.ashigeru.eclipse.util.launch.selected">
            </reference>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="com.ashigeru.eclipse.util.launch.selected">
         <with
               variable="selection">
            <and>
               <count
                     value="1">
               </count>
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <adapt
                        type="org.eclipse.core.resources.IResource">
                  </adapt>
               </iterate>
            </and>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any">
         <command
               commandId="com.ashigeru.eclipse.util.launch.launchResource"
               style="push">
            <visibleWhen
                  checkEnabled="false">
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
